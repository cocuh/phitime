{% extends "../base.jinja2" %}
{% import "../macro/form.jinja2" as form %}
{% block content %}
    <form method="POST" action="">
        {{ form.input('event.name', value=event.name) }}
        {{ form.input('event.description', value=event.description) }}
        {{ form.select_timetable_type(TimetableUtils, event.timetable_type) }}
        {{ form.csrf_token(request) }}
        <input type="submit"/>
    </form>
    <a href="{{ request.route_path('event.edit.proposed', event_scrambled_id=event.scrambled_id) }}">event.edit.proposed_time</a>
    <br/>
{% endblock %}